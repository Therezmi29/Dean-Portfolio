@model IEnumerable<Dean_Resume.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<!-- ======= Breadcrumbs ======= -->
<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2><i class="bi bi-emoji-kiss"></i>Booooch <i class="bi bi-emoji-kiss"></i></h2>
        </div>
    </div>
</section><!-- End Breadcrumbs -->

<a asp-action="AddPortfolio" asp-controller="Home" class=button-62 style="margin:15px">Add</a>

<!-- ======= My Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">
        <div class="row portfolio-container">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-img"><img src="~/assets/img/portfolio/@(item.ProductId).jpg" class="img-fluid" alt=""></div>
                    <div class="portfolio-info">
                        <h4>@item.Name</h4>
                        <p>@item.Note</p>
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.ProductId" title="Edit"><i class="bx bx-plus"></i></a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.ProductId" class="details-link" title="Delete"><i class="bx bx-link"></i></a>
                    </div>
                </div>

            }
        </div>
    </div>
</section><!-- End My Portfolio Section -->
